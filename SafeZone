import React, { useState, useEffect } from 'react';
import { motion } from 'framer-motion';
import { ArrowLeft, MapPin, Navigation, Loader2, RefreshCw } from 'lucide-react';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { Button } from '@/components/ui/button';
import SafeZonesMap from '@/components/map/SafeZonesMap';

export default function SafeZones() {
  const [userLocation, setUserLocation] = useState(null);
  const [isLoading, setIsLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    getCurrentLocation();
  }, []);

  const getCurrentLocation = () => {
    setIsLoading(true);
    setError(null);

    if (!navigator.geolocation) {
      setError('Location is not supported by your browser');
      setIsLoading(false);
      return;
    }

    navigator.geolocation.getCurrentPosition(
      (position) => {
        setUserLocation({
          lat: position.coords.latitude,
          lng: position.coords.longitude
        });
        setIsLoading(false);
      },
      (err) => {
        setError('Unable to get your location. Please enable location access.');
        setIsLoading(false);
      },
      { enableHighAccuracy: true, timeout: 10000 }
    );
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-rose-50 via-white to-green-50 flex flex-col">
      {/* Header */}
      <header className="sticky top-0 z-20 bg-white/80 backdrop-blur-lg border-b border-gray-100">
        <div className="px-6 py-4">
          <div className="flex items-center gap-4">
            <Link to={createPageUrl('Home')}>
              <motion.button
                whileTap={{ scale: 0.95 }}
                className="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center"
              >
                <ArrowLeft className="w-5 h-5 text-gray-600" />
              </motion.button>
            </Link>
            <div className="flex-1">
              <h1 className="text-xl font-bold text-gray-800">Safe Spaces</h1>
              <p className="text-sm text-gray-400">Find help nearby</p>
            </div>
            <Button
              variant="outline"
              size="icon"
              onClick={getCurrentLocation}
              disabled={isLoading}
              className="rounded-full"
            >
              <RefreshCw className={`w-5 h-5 ${isLoading ? 'animate-spin' : ''}`} />
            </Button>
          </div>
        </div>
      </header>

      <main className="flex-1 relative">
        {isLoading ? (
          <div className="absolute inset-0 flex items-center justify-center">
            <div className="text-center">
              <Loader2 className="w-10 h-10 text-rose-400 animate-spin mx-auto mb-4" />
              <p className="text-gray-500">Getting your location...</p>
            </div>
          </div>
        ) : error ? (
          <div className="absolute inset-0 flex items-center justify-center p-6">
            <div className="text-center max-w-xs">
              <div className="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <MapPin className="w-8 h-8 text-red-400" />
              </div>
              <h2 className="text-lg font-semibold text-gray-800 mb-2">
                Location Required
              </h2>
              <p className="text-gray-500 text-sm mb-6">{error}</p>
              <Button onClick={getCurrentLocation} className="bg-rose-500 hover:bg-rose-600">
                <Navigation className="w-4 h-4 mr-2" />
                Try Again
              </Button>
            </div>
          </div>
        ) : (
          <SafeZonesMap
            userLocation={userLocation}
            className="absolute inset-0"
          />
        )}
      </main>

      {/* Bottom Info Panel */}
      {userLocation && !isLoading && (
        <motion.div
          initial={{ y: 100 }}
          animate={{ y: 0 }}
          className="bg-white rounded-t-3xl shadow-lg p-6 relative z-10"
        >
          <div className="flex items-center gap-4">
            <div className="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
              <MapPin className="w-6 h-6 text-green-500" />
            </div>
            <div className="flex-1">
              <p className="font-semibold text-gray-800">Your Location Active</p>
              <p className="text-sm text-gray-400">
                Showing police, hospitals & pharmacies within 3km
              </p>
            </div>
          </div>

          <div className="mt-4 grid grid-cols-3 gap-3">
            <a
              href={`https://www.google.com/maps/search/police+station/@${userLocation.lat},${userLocation.lng},15z`}
              target="_blank"
              rel="noopener noreferrer"
              className="bg-blue-50 rounded-xl p-3 text-center"
            >
              <span className="text-2xl">üëÆ</span>
              <p className="text-xs text-blue-700 mt-1">Police</p>
            </a>
            <a
              href={`https://www.google.com/maps/search/hospital/@${userLocation.lat},${userLocation.lng},15z`}
              target="_blank"
              rel="noopener noreferrer"
              className="bg-red-50 rounded-xl p-3 text-center"
            >
              <span className="text-2xl">üè•</span>
              <p className="text-xs text-red-700 mt-1">Hospital</p>
            </a>
            <a
              href={`https://www.google.com/maps/search/pharmacy/@${userLocation.lat},${userLocation.lng},15z`}
              target="_blank"
              rel="noopener noreferrer"
              className="bg-green-50 rounded-xl p-3 text-center"
            >
              <span className="text-2xl">üíä</span>
              <p className="text-xs text-green-700 mt-1">Pharmacy</p>
            </a>
          </div>
        </motion.div>
      )}
    </div>
  );
}